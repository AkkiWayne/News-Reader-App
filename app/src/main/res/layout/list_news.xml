<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/head_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:padding="4dp"
        android:textSize="20sp"
        android:layout_marginRight="16dp"
        android:textColor="#FFFFFF"
        tools:text="Try"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/head_textview"
        android:id="@+id/body_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:padding="10dp"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="t"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_below="@+id/body_textview"
        android:id="@+id/author_textview"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        tools:text="Author's Name" />
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/body_textview"
        android:layout_alignTop="@+id/author_textview"
        tools:text="Date" />
</RelativeLayout>
